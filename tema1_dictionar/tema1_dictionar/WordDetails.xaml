<Window x:Class="tema1_dictionar.WordDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Details" Height="450" Width="538"
        Background="DarkSlateGray">

    <Grid>

        <!-- Display the word -->
        <TextBlock x:Name="wordNameBlock" FontSize="20" FontFamily="bahnschrift" Foreground="WhiteSmoke" Margin="10,10,193,378" TextWrapping="Wrap"></TextBlock>

        <!-- Display the line -->

        <!-- Display the description -->
        <TextBlock x:Name="wordDescriptionBlock" FontSize="16" FontFamily="bahnschrift" Foreground="WhiteSmoke" Margin="10,56,10,299" TextWrapping="Wrap"></TextBlock>

        <!-- Display the image -->
        <Image x:Name="wordImage" Margin="152,136,152,65"/>
    </Grid>
</Window>